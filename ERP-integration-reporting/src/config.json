{
    "database": {
        "server": "your_server_name",
        "database": "your_database_name",
        "user": "your_db_user",
        "password": "your_db_password",
        "use_windows_auth": false
    },
    "report_settings": {
        "output_directory": "C:/ERPReports/",
        "default_format": "Excel",  
        "allowed_formats": ["Excel", "PDF"],
        "date_format": "yyyy-MM-dd"
    },
    "email_notifications": {
        "enabled": true,
        "smtp_server": "smtp.yourmail.com",
        "port": 587,
        "sender_email": "noreply@yourcompany.com",
        "recipient_group": ["manager@yourcompany.com", "admin@yourcompany.com"],
        "subject": "Automated ERP Report Notification",
        "body_template": "The report {report_name} has been generated successfully."
    },
    "logging": {
        "log_level": "INFO",
        "log_file": "C:/ERPReports/logs/app.log"
    }
}
